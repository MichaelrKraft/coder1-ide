            generatedFiles: 0,
            requirement: 'Build a complete project based on user requirements',
            workflow: data.workflow,
            executionType: data.executionType
          });
        }
      } else {
        throw new Error(data.error || 'Failed to spawn AI team');
      }
    } catch (error) {
      // logger?.error('AI Team spawn failed:', error);
      xtermRef.current.writeln(`âŒ Failed to spawn AI team: ${error}`);
      xtermRef.current.writeln('ğŸ”§ Check that the server is running and try again');
