# Production Environment Variables for Coder1 IDE
# Set these in your deployment platform (Vercel, Netlify, etc.)

# Node Environment
NODE_ENV=production

# Claude Code API Configuration - FOR CLAUDE CODE SUBSCRIBERS ONLY
# IMPORTANT: Set this in your deployment platform's environment variables
# Use your Claude Code API key (NOT Anthropic Console keys)
CLAUDE_API_KEY=your-production-claude-code-api-key

# Server Configuration
# These will be automatically set based on your deployment domain
# Override only if you need different backend URLs
# NEXT_PUBLIC_API_URL=https://your-domain.vercel.app
# NEXT_PUBLIC_EXPRESS_BACKEND_URL=https://your-backend-domain.com
# NEXT_PUBLIC_WEBSOCKET_URL=wss://your-backend-domain.com

# Feature Flags for Production
NEXT_PUBLIC_ENABLE_AI_CONSULTATION=true
NEXT_PUBLIC_ENABLE_AGENT_DASHBOARD=true
NEXT_PUBLIC_ENABLE_TWEAKCC=true

# Container Mode (disabled in production for alpha)
ENABLE_CONTAINERS=false
NEXT_PUBLIC_ENABLE_CONTAINERS=false

# Performance Settings
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_REQUEST_TIMEOUT=30000