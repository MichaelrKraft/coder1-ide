# Coder1 IDE Environment Variables
# Copy this file to .env.local and update with your values

# ====== Core Configuration ======
# Node environment (development, production, test)
# Format: see validation
NODE_ENV=development

# Server port number (1-65535)
# Format: see validation
PORT=3001


# ====== Claude CLI Integration ======
# Custom path to Claude CLI executable (auto-detected if not set)
# Leave empty for automatic detection
CLAUDE_CLI_PATH=


# ====== Database ======
# Database connection string
DATABASE_URL=sqlite://./data/coder1.db

# JWT secret for authentication (min 32 chars)
# Format: see validation
JWT_SECRET=your-secret-here


# ====== Authentication ======
# NextAuth secret for session management
# Format: see validation
NEXTAUTH_SECRET=your-secret-here

# NextAuth callback URL
NEXTAUTH_URL=http://localhost:3001


# ====== Feature Flags ======
# Enable AI supervision in terminal
# Format: see validation
ENABLE_SUPERVISION=true

# Enable session summary feature
# Format: see validation
ENABLE_SESSION_SUMMARY=true

# Enable container/sandbox features
# Format: see validation
ENABLE_CONTAINERS=false


# ====== OAuth Providers ======
# GitHub OAuth client ID
GITHUB_CLIENT_ID=

# GitHub OAuth client secret
GITHUB_CLIENT_SECRET=your-secret-here

# Google OAuth client ID
GOOGLE_CLIENT_ID=

# Google OAuth client secret
GOOGLE_CLIENT_SECRET=your-secret-here


# ====== Performance & Limits ======
# Maximum file size in bytes
# Format: see validation
MAX_FILE_SIZE=10485760

# Request timeout in milliseconds
# Format: see validation
REQUEST_TIMEOUT=30000

# Maximum concurrent terminal sessions
# Format: see validation
MAX_TERMINAL_SESSIONS=10
