#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Run linting
echo "ğŸ“‹ Checking code style..."
npm run lint || exit 1

# Run type checking
echo "ğŸ”§ Checking TypeScript types..."
npm run type-check || exit 1

# Run unit tests for changed files
echo "ğŸ§ª Running relevant tests..."
npm run test:unit -- --bail --findRelatedTests $(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(ts|tsx)$' | tr '\n' ' ') || exit 1

# Check bundle size impact
echo "ğŸ“¦ Checking bundle size impact..."
npm run test:bundle-size || echo "âš ï¸  Bundle size check failed - review before merging"

echo "âœ… Pre-commit checks passed!"