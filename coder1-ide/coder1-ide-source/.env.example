# Coder1 Preview Enhancement Environment Variables
# Copy this to .env and modify values as needed

# ===== PREVIEW ENHANCEMENT FEATURE FLAGS =====
# These override the default feature flags in src/config/features.ts

# Phase 1 Features (Basic Functionality)
REACT_APP_PREVIEW_COMPONENT_GENERATION=true
REACT_APP_PREVIEW_IFRAME_SANDBOX=true
REACT_APP_PREVIEW_ERROR_BOUNDARY=true
REACT_APP_PREVIEW_LIVE_UPDATES=true

# Phase 2 Features (Enhanced Functionality) - Set to true when implemented
REACT_APP_PREVIEW_VARIANT_GENERATION=false
REACT_APP_PREVIEW_RESPONSIVE_MODE=false
REACT_APP_PREVIEW_PROPS_MANIPULATION=false

# Phase 3 Features (AI-Powered) - Set to true when implemented
REACT_APP_PREVIEW_AI_AGENTS=false
REACT_APP_PREVIEW_OPTIMIZATION=false
REACT_APP_PREVIEW_TEST_GENERATION=false

# Phase 4 Features (Professional) - Set to true when implemented
REACT_APP_PREVIEW_DESIGN_SYSTEM=false
REACT_APP_PREVIEW_MARKETPLACE=false
REACT_APP_PREVIEW_EXPORT_TOOLS=false

# ===== PREVIEW CONFIGURATION =====
# Component generation settings
REACT_APP_PREVIEW_GENERATION_TIMEOUT=30000
REACT_APP_PREVIEW_MAX_COMPONENTS=100
REACT_APP_PREVIEW_CACHE_DURATION=3600000

# Sandbox security settings
REACT_APP_PREVIEW_SANDBOX_TIMEOUT=10000
REACT_APP_PREVIEW_SANDBOX_MEMORY_LIMIT=50
REACT_APP_PREVIEW_ALLOW_EXTERNAL_RESOURCES=false

# Performance settings
REACT_APP_PREVIEW_DEBOUNCE_MS=300
REACT_APP_PREVIEW_MAX_RENDER_TIME=5000
REACT_APP_PREVIEW_ENABLE_PERFORMANCE_MONITORING=true

# ===== API CONFIGURATION =====
# Preview service endpoints (if using external services in future phases)
REACT_APP_PREVIEW_API_BASE_URL=http://localhost:3000/api/preview
REACT_APP_PREVIEW_WS_URL=ws://localhost:3000/preview

# AI Service configuration (for Phase 3+)
REACT_APP_OPENAI_API_KEY=your-openai-api-key-here
REACT_APP_ANTHROPIC_API_KEY=your-anthropic-api-key-here

# ===== DEVELOPMENT SETTINGS =====
# Enable development features
REACT_APP_PREVIEW_DEBUG_MODE=false
REACT_APP_PREVIEW_VERBOSE_LOGGING=false
REACT_APP_PREVIEW_SHOW_PERFORMANCE_METRICS=false

# Development shortcuts
REACT_APP_PREVIEW_AUTO_RELOAD_ON_ERROR=true
REACT_APP_PREVIEW_MOCK_AI_SERVICES=false
REACT_APP_PREVIEW_ENABLE_HOT_RELOAD=true

# ===== EXISTING CODER1 FEATURES =====
# These control other Coder1 features (keep as needed)
REACT_APP_FILE_SEARCH=true
REACT_APP_THINKING_MODE_TOGGLE=true
REACT_APP_SESSION_CHECKPOINTS=true
REACT_APP_TOOL_DASHBOARD=true
REACT_APP_PRD_PIPELINE_VISUALIZER=true

REACT_APP_TERMINAL_EXECUTION=false
REACT_APP_AGENT_EXECUTION=false
REACT_APP_PERMISSION_SYSTEM=false

REACT_APP_MULTI_AGENT_VIEW=false
REACT_APP_COLLABORATION_MODE=false
REACT_APP_AI_MODEL_SWITCHING=false