<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.coder1.pty-limit</string>
    <key>ProgramArguments</key>
    <array>
        <string>/usr/sbin/sysctl</string>
        <string>-w</string>
        <string>kern.tty.ptmx_max=768</string>
    </array>
    <key>RunAtLoad</key>
    <true/>
    <key>ServiceDescription</key>
    <string>Increase PTY limit for Coder1 terminal support</string>
    <key>StandardErrorPath</key>
    <string>/tmp/pty-limit.err</string>
    <key>StandardOutPath</key>
    <string>/tmp/pty-limit.out</string>
</dict>
</plist>