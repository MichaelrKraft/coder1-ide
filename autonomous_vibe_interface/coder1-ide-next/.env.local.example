# Coder1 IDE Environment Variables
# Copy this file to .env.local and fill in your values

# ===========================
# SECURITY SETTINGS (REQUIRED)
# ===========================

# Alpha access token for early users (generate a secure random string)
CODER1_ALPHA_TOKEN=your-secure-alpha-token-here

# JWT secret for session signing (generate with: openssl rand -base64 32)
JWT_SECRET=your-jwt-secret-here

# ===========================
# API CONFIGURATIONS
# ===========================

# Claude API key for AI features
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# OpenAI API key (optional, for fallback AI features)
OPENAI_API_KEY=sk-your-openai-key-here

# ===========================
# SERVER SETTINGS
# ===========================

# Node environment
NODE_ENV=development

# Server port (default: 3001)
PORT=3001

# Frontend URL for CORS
NEXT_PUBLIC_API_URL=http://localhost:3001

# ===========================
# DATABASE SETTINGS
# ===========================

# Context memory database path (relative to project root)
DATABASE_PATH=./db/context-memory.db

# ===========================
# RATE LIMITING
# ===========================

# Enable rate limiting (true/false)
ENABLE_RATE_LIMITING=true

# Rate limit window in minutes
RATE_LIMIT_WINDOW_MINUTES=15

# Maximum requests per window (per IP)
RATE_LIMIT_MAX_REQUESTS=100

# ===========================
# LOGGING & MONITORING
# ===========================

# Enable detailed logging in production (true/false)
ENABLE_PRODUCTION_LOGGING=false

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# ===========================
# FEATURE FLAGS
# ===========================

# Enable Context Memory System (true/false)
ENABLE_CONTEXT_MEMORY=true

# Enable file API authentication (true/false)
ENABLE_FILE_AUTH=true

# Enable AI supervision features (true/false) 
ENABLE_AI_SUPERVISION=true

# Enable workflow automation (true/false)
ENABLE_WORKFLOWS=false

# ===========================
# OPTIONAL INTEGRATIONS
# ===========================

# Airtop API key for browser automation (optional)
AIRTOP_API_KEY=your-airtop-key-here

# Sentry DSN for error tracking (optional)
SENTRY_DSN=your-sentry-dsn-here

# ===========================
# ALPHA TESTING SETTINGS
# ===========================

# Valid alpha access codes (comma-separated)
ALPHA_CODES=coder1-alpha-2025,early-adopter,claude-code-user

# Maximum alpha users (optional)
MAX_ALPHA_USERS=50

# Alpha session duration in hours
ALPHA_SESSION_HOURS=24