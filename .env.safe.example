# ====================================================================
# SAFE DEFAULTS - PREVENTS UNEXPECTED API CHARGES
# ====================================================================
# Copy this file to .env.local and adjust settings as needed
# These defaults ensure NO API charges without explicit user action
# ====================================================================

# -----------------------------
# üõ°Ô∏è SAFETY SETTINGS (DO NOT CHANGE UNLESS YOU UNDERSTAND THE COSTS)
# -----------------------------

# Master switch - Set to false to disable ALL AI services
ENABLE_AI_SERVICES=false

# Use mock responses instead of real API calls
USE_MOCK_RESPONSES=true

# Maximum daily API calls allowed per user
MAX_DAILY_API_CALLS=10

# Maximum daily cost in USD per user
MAX_DAILY_COST_USD=1.00

# Require explicit confirmation for expensive operations (>$0.10)
REQUIRE_COST_CONFIRMATION=true

# Disable all automatic interval-based API calls
DISABLE_ALL_INTERVALS=true

# Disable health checks that might use APIs
DISABLE_HEALTH_CHECKS=true

# Log every API call for transparency
LOG_ALL_API_CALLS=true

# Alert email for usage warnings (optional)
ALERT_EMAIL=admin@example.com

# -----------------------------
# üîë API KEYS (COMMENTED OUT BY DEFAULT FOR SAFETY)
# -----------------------------
# IMPORTANT: Only uncomment if you understand the cost implications
# Monitor your usage at:
# - Anthropic: https://console.anthropic.com/usage
# - OpenAI: https://platform.openai.com/usage

# Claude Code OAuth Token (For Max plan users - no direct charges)
# This uses your Claude Code subscription, not pay-per-use API
# CLAUDE_CODE_OAUTH_TOKEN=sk-ant-oat01-YOUR-TOKEN-HERE

# Anthropic API Key (PAY PER USE - CAN CAUSE CHARGES!)
# ‚ö†Ô∏è WARNING: This will charge your Anthropic account per API call
# Only enable if you want to use pay-per-use API instead of Claude Code Max
# ANTHROPIC_API_KEY=sk-ant-api03-YOUR-KEY-HERE

# OpenAI API Key (PAY PER USE - CAN CAUSE CHARGES!)
# ‚ö†Ô∏è WARNING: This will charge your OpenAI account per API call
# OPENAI_API_KEY=sk-YOUR-KEY-HERE

# -----------------------------
# üìä USAGE TIERS
# -----------------------------
# Configure different limits for different user tiers

# Demo users (no API key)
DEMO_MAX_DAILY_CALLS=5
DEMO_MAX_DAILY_COST=0.00

# Free tier users
FREE_MAX_DAILY_CALLS=50
FREE_MAX_DAILY_COST=1.00

# Pro tier users
PRO_MAX_DAILY_CALLS=500
PRO_MAX_DAILY_COST=10.00

# BYOK (Bring Your Own Key) users
BYOK_WARNINGS_ENABLED=true
BYOK_MAX_DAILY_COST=50.00

# -----------------------------
# üö® EMERGENCY CONTROLS
# -----------------------------

# Emergency stop - Set to true to immediately block ALL API calls
EMERGENCY_STOP=false

# Maintenance mode - Shows maintenance message instead of making API calls
MAINTENANCE_MODE=false

# -----------------------------
# üìù LOGGING AND MONITORING
# -----------------------------

# Usage report frequency (in minutes)
USAGE_REPORT_INTERVAL=60

# Send daily usage reports
SEND_DAILY_REPORTS=true

# Webhook for usage alerts (optional)
USAGE_ALERT_WEBHOOK=

# -----------------------------
# üîß DEVELOPMENT SETTINGS
# -----------------------------

# Node environment
NODE_ENV=development

# Server port
PORT=3000

# Session secret (change this in production!)
SESSION_SECRET=your-session-secret-here

# Enable debug logging
DEBUG=false

