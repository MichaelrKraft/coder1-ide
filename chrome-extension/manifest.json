{
  "manifest_version": 3,
  "name": "Coder1 Component Capture",
  "version": "1.2.7",
  "description": "Capture any web component and generate code instantly in Coder1 IDE [v1.2.0 - Simplified version]",
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:3001/*",
    "http://localhost:3002/*",
    "http://127.0.0.1:3001/*",
    "http://127.0.0.1:3002/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-simple.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}